{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "alwaysStrict": false,
    "declaration": false,
    "declarationMap": false,
    "downlevelIteration": true,
    "inlineSources": false,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "strictBindCallApply": false,
    "experimentalDecorators": true,
    // Skip type checking of all declaration files
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": "/js",
    "outDir": "../src/sentry/static/sentry/dist",
    "paths": {
      "app/*": ["/workspace/static/app/*"],
      "sentry-test/*": ["/workspace/tests/js/sentry-test/*"],
      "sentry-images/*": ["/workspace/static/images/*"],
      "sentry-logos/*": ["/workspace/src/sentry/static/sentry/images/logos/*"],
      "sentry-fonts/*": ["/workspace/static/fonts/*"],
      // Use the stub file for typechecking. Webpack resolver will use the real files
      // based on configuration.
      "integration-docs-platforms": [
        "/workspace/tests/fixtures/integration-docs/_platforms.json",
        "/workspace/src/sentry/integration-docs/_platforms.json"
      ]
    },
    "plugins": [{"name": "typescript-styled-plugin"}]
  },
  "include": ["/workspace/static", "/workspace/tests/js"],
  "exclude": ["/js/node_modules"]
}
