                "platform": null,
                "firstEvent": null,
                "isMember": false,
                "team": {
                  "id": "542609",
                  "name": "Powerful Abolitionist",
                  "slug": "powerful-abolitionist"
                },
                "dateCreated": "2020-08-20T14:36:34.171255Z",
                "isBookmarked": false,
                "id": "5398494",
                "latestDeploys": null,
                "features": [
                  "custom-inbound-filters",
                  "discard-groups",
                  "rate-limits",
                  "data-forwarding",
                  "similarity-view",
                  "issue-alerts-targeting",
                  "servicehooks",
                  "minidump",
                  "similarity-indexing"
                ]
              }
            ]
          }
        }
      },
      "403": {
        "description": "Forbidden"
      },
      "404": {
        "description": "Team not found"
